<!DOCTYPE html>
<html lang="<txp:lang />" dir="<txp:text item="lang_dir" />">

<txp:output_form form="head" />

<txp:if_variable name="front-page">
    <body class="front-page" itemscope itemtype="https://schema.org/WebPage">
<txp:else />
    <txp:if_search>
        <body class="search-page" itemscope itemtype="https://schema.org/SearchResultsPage">
    <txp:else />
        <body class="listing-page" itemscope itemtype="https://schema.org/CollectionPage">
    </txp:if_search>
</txp:if_variable>

    <txp:output_form form="body_header" />

        <main id="main" aria-label="<txp:text item="main_content" />" itemscope itemtype="https://schema.org/WebPage">

            <txp:if_search>
                <!-- search results -->
                <txp:output_form form="search_display" />
            <txp:else />
                <txp:if_variable name="front-page">
                    <!-- front page -->
                    <!-- links by default to form: 'default.txp' unless a different form is specified -->
                    <txp:article limit="5" />
                <txp:else />
                    <!-- listing page -->
                    <txp:if_author>
                        <!-- page author heading  -->
                        <h1 itemprop="name"><txp:text item="author" />: <txp:author /></h1>
                    <txp:else />
                        <txp:if_category>
                            <!-- page category heading -->
                            <h1 itemprop="name"><txp:text item="category" />: <txp:category title /></h1>
                        </txp:if_category>
                    </txp:if_author>
                    <!-- default limit is 10 articles -->
                    <txp:article form="article_listing" wraptag="ul" class="article__list" />
                </txp:if_variable>
                <txp:output_form form="body_pagination" />
            </txp:if_search>

        </main>

        <txp:output_form form="body_aside" />
        <txp:output_form form="body_footer" />

    </body>
</html>